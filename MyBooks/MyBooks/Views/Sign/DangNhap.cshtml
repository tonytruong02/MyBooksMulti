
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<link href="~/Content/mystyle.css" rel="stylesheet" />
<link href="~/Content/stylepro.css" rel="stylesheet" />

<section>
    <div class="container">
        <div class="img-bg">
            <img src="~/Image/mybooks_logo.png" alt="">
        </div>
        <div class="noi-dung">
            <div class="form">
                <h2>Trang Đăng Nhập</h2>
                <h2 style="color: red;">@ViewBag.ErrorInfo</h2>
                <form action="/Sign/DangNhap" method="post">
                    <div class="input-form">
                        <span>ID Khách Hàng</span>
                        <input type="text" name="cus.IDCus" placeholder="Nhập ID">
                    </div>
                    <div class="input-form">
                        <span>Mật Khẩu</span>
                        <input type="password" name="cus.PassCus" placeholder="Nhập mật khẩu">
                    </div>
                    <div class="nho-dang-nhap">
                        <label><input type="checkbox" name=""> Nhớ Đăng Nhập</label>
                    </div>
                    <div class="input-form">
                        <input type="submit" value="Đăng Nhập">
                    </div>
                    <div class="input-form">
                        <p>Bạn Chưa Có Tài Khoản? <a href="~/Sign/DangKy">Đăng Ký</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


