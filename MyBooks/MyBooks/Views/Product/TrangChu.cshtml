@using MyBooks.Models;
@model  IEnumerable<Book>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<head>
    <link href="~/Content/stylepro.css" rel="stylesheet" />
    <link href="~/Fonts/themify-icons/themify-icons.css" rel="stylesheet" />
</head>
<section>
    <div class="container" style="">
        <div id="demo" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Image/test_adver1.jpg" class="d-block w-100">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Image/test_adver2.jpg" class="d-block w-100">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Image/test_adver3.jpg" class="d-block w-100">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Image/test_adver4.jpg" class="d-block w-100">
                    <div class="carousel-caption">
                    </div>
                </div>

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>
    @Html.Action("LastestBook", "Product")
    <div class="container">
        <h2 class="section-title">Book Store</h2>
        <div class="row d-flex justify-content-between" style="margin-top: 10px">
            @foreach (var sach in Model)
            {
                <div class="product-box">
                    <img class="img-product" src="~/Image/@sach.Imagebook" alt="" />
                    <h2 class="product-title">@sach.BookName</h2>
                    <span class="price">@Math.Round(Convert.ToDouble(sach.Price), 0) đ</span>
                    <a href="@Url.Action("Detail", "Product", new { id = sach.BookID})" style="position:absolute; " class="add-cart" ><i class="bi bi-bag-check-fill " style="height: 100%; width: 100%"></i></a>
                </div>
            }
        </div>
    </div>
    <a href="@Url.Action("TrangChuMore", "Product")" class="button_more">XEM THÊM</a>
    <script src="~/Content/script.min.js"></script>
</section>