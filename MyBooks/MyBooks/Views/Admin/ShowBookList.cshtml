@model IEnumerable< MyBooks.Models.Book>

@{
    ViewBag.Title = "LinkVoucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>LIÊN KẾT VOUCHER VỚI SÁCH</h2>
<table class="table">
    <tr>
        <th>
            <span>MÃ SÁCH</span>
        </th>
        <th>
            <span>Tên sách</span>
        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <span>@item.BookID</span>
            </td>
            <td>
                <span>@item.BookName</span>
            </td>
            <td>
                @Html.ActionLink("Chọn để gán voucher","LinkVoucher", new { idbook = item.BookID })
            </td>
        </tr>
    }
</table>

