@model MyBooks.Models.Book

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Book</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h3>@ViewBag.ThongBaoCreate</h3>
    <div class="form-group">
        <label class="control-label col-md-2">Mã sách</label><br />
        <input class="form-control col-md-10" type="text" name="BookID" value="" placeholder="Mã sách" required />
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tên sách</label><br />
        <input class="form-control col-md-10" type="text" name="BookName" value="" placeholder="Tên sách" required />
    </div>
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <label class="control-label col-md-2">Nhà xuất bản</label><br />
        <input class="form-control col-md-10" type="text" name="BookNXB" value="" placeholder="NXB" required />
    </div>

    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <label class="control-label col-md-2">Nhà cung cấp</label><br />
        <input class="form-control col-md-10" type="text" name="BookNCC" value="" placeholder="NCC" required />
    </div>

    <div class="form-group">

        <label class="control-label col-md-2">Chủ đề</label><br />
        <input class="form-control col-md-10" type="text" name="BookCate" value="" placeholder="TAMLI | KINHTE | GIAODUC | THIEUNHI | VANHOC" required />
        @Html.ValidationSummary(true, "TAMLI | KINHTE | GIAODUC | THIEUNHI | VANHOC", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label class="control-label col-md-2">Đơn vị</label><br />
        <input class="form-control col-md-10" type="text" name="BookUnit" value="" placeholder="Đơn vị" required />
    </div>

    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label class="control-label col-md-2">Giá</label><br />
        <input class="form-control col-md-10" type="number" name="BookPrice" value="" placeholder="Giá " required />
    </div>

    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label class="control-label col-md-2">Hình ảnh</label><br />
        <input class="form-control col-md-10" type="file" name="BookImg" value="" required />
    </div>

    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay về trang sản phẩm", "QLSanPham")
</div>


